<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#24e9bb"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_italiano"
            android:textSize="20dp"
            android:text="Username: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/username"
            android:hint="@string/username"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_italiano"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:text="Password: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/password"
            android:hint="@string/prompt_password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_italiano"
            android:layout_height="wrap_content"
            android:text="Nome: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nome"
            android:textSize="20dp"
            android:layout_marginLeft="36dp"
            android:hint="@string/nome"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_italiano"
            android:textSize="20dp"
            android:text="Cognome: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cognome"
            android:textSize="20dp"
            android:hint="@string/cognome"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_inglese"
        android:textSize="30dp"
        android:layout_marginLeft="60dp"
        android:text="Opzioni Account"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="logout"
            android:src="@drawable/logout"
            android:text="Logout"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="aggiungiUtente"
            android:layout_marginLeft="50dp"
            android:src="@drawable/user_add"
            android:text="+Utente"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="home"
            android:layout_marginLeft="45dp"
            android:src="@drawable/home"
            android:text="Torna alla Home"
            android:id="@+id/home"/>
    </LinearLayout>

</LinearLayout>